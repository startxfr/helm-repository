{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "context": {
            "type": "object",
            "title": "Deployment context",
            "description": "Properties of the deployment context.",
            "required": [
                "scope",
                "cluster",
                "environment",
                "component",
                "app"
            ],
            "properties": {
                "scope": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25,
                    "title": "Scope name",
                    "description": "Name of the global scope for this application. Define an organisational tenant.",
                    "default": "myscope",
                    "examples": [
                        "myscope",
                        "mycustomer"
                    ]
                },
                "cluster": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25,
                    "title": "Cluster name",
                    "description": "Name of the cluster running this application. Define a platform tenant.",
                    "default": "localhost",
                    "examples": [
                        "mycluster",
                        "localhost"
                    ]
                },
                "environment": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25,
                    "title": "Environement name",
                    "description": "Name of the environement for this application. Define a stage tenant.",
                    "default": "dev",
                    "examples": [
                        "dev",
                        "factory",
                        "preprod",
                        "prod"
                    ]
                },
                "component": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 25,
                    "title": "Component name",
                    "description": "Name of the component consisting of this application. Define a logical tenant.",
                    "default": "sxapi",
                    "examples": [
                        "mycomp",
                        "myservice"
                    ]
                },
                "app": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 40,
                    "title": "Application name",
                    "description": "Name of the application name. Define a functionnal tenant.",
                    "default": "default-sxapi",
                    "examples": [
                        "myapp",
                        "mymicroservice"
                    ]
                },
                "version": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 30,
                    "title": "Version name",
                    "description": "Name of the application version. Define this deployment version. Should be incremented each time application configuration is changed to keep track of changes and allow ease rollin of the application (and rollout in case of problem). Default use Chart appVersion.",
                    "default": "0.0.1",
                    "examples": [
                        "0.0.1",
                        "0.1",
                        "0.0.1-snapshot",
                        "0.0.1-202110300900"
                    ]
                }
            }
        },
        "alertmanager": {
            "type": "object",
            "properties": {
                "api": {
                    "type": "object",
                    "properties": {
                        "endpoint": {
                            "type": "string"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "pagerDutty": {
                    "type": "object",
                    "properties": {
                        "key": {
                            "type": "string"
                        }
                    }
                },
                "receiverName": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                }
            }
        },
        "autoscaling": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "max": {
                    "type": "object",
                    "properties": {
                        "cores": {
                            "type": "integer"
                        },
                        "memory": {
                            "type": "integer"
                        },
                        "nodes": {
                            "type": "integer"
                        }
                    }
                },
                "min": {
                    "type": "object",
                    "properties": {
                        "cores": {
                            "type": "integer"
                        },
                        "memory": {
                            "type": "integer"
                        },
                        "nodes": {
                            "type": "integer"
                        }
                    }
                },
                "scaleDown": {
                    "type": "boolean"
                }
            }
        },
        "clusterversion": {
            "type": "object",
            "properties": {
                "channel": {
                    "type": "string"
                },
                "clusterID": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "version": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 30,
                    "title": "Version name",
                    "description": "Name of the application version. Define this deployment version. Should be incremented each time application configuration is changed to keep track of changes and allow ease rollin of the application (and rollout in case of problem). Default use Chart appVersion.",
                    "default": "4.12",
                    "examples": [
                        "4.12",
                        "4.11",
                        "4.10"
                    ]
                },
                "desiredVersion": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 30,
                    "title": "Desired version",
                    "description": "Define the targeted applyed version (if cluster update are managed in a gitops way)",
                    "default": "4.11.17",
                    "examples": [
                        "4.12.1",
                        "4.11.18",
                        "4.11.17"
                    ]
                }
            }
        },
        "helm_reposistory": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "list": {
                    "type": "array"
                }
            }
        },
        "imageprunner": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "history": {
                    "type": "object",
                    "properties": {
                        "failed": {
                            "type": "integer"
                        },
                        "successful": {
                            "type": "integer"
                        }
                    }
                },
                "schedule": {
                    "type": "string"
                },
                "suspend": {
                    "type": "boolean"
                }
            }
        },
        "monitoring": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "infra_enabled": {
                    "type": "boolean"
                },
                "storageClass": {
                    "type": "string"
                },
                "storageSize": {
                    "type": "string"
                }
            }
        },
        "operatorElastic": {
            "type": "object",
            "properties": {
                "context": {
                    "type": "object",
                    "properties": {
                        "app": {
                            "type": "string"
                        },
                        "cluster": {
                            "type": "string"
                        },
                        "component": {
                            "type": "string"
                        },
                        "environment": {
                            "type": "string"
                        },
                        "scope": {
                            "type": "string"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "operatorGroup": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "hooked": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "providedAPIs": {
                            "type": "string"
                        },
                        "target": {
                            "type": "string"
                        }
                    }
                },
                "subscription": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "hooked": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "operator": {
                            "type": "object",
                            "properties": {
                                "channel": {
                                    "type": "string"
                                },
                                "csv": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "source": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        },
                                        "namespace": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        },
                        "version": {
                            "type": "string",
                            "minLength": 1,
                            "maxLength": 30,
                            "title": "Version name",
                            "description": "Name of the application version. Define this deployment version. Should be incremented each time application configuration is changed to keep track of changes and allow ease rollin of the application (and rollout in case of problem). Default use Chart appVersion.",
                            "default": "0.0.1",
                            "examples": [
                                "0.0.1",
                                "0.1",
                                "0.0.1-snapshot",
                                "0.0.1-202110300900"
                            ]
                        }
                    }
                }
            }
        },
        "project": {
            "type": "object",
            "properties": {
                "context": {
                    "type": "object",
                    "properties": {
                        "app": {
                            "type": "string"
                        },
                        "cluster": {
                            "type": "string"
                        },
                        "component": {
                            "type": "string"
                        },
                        "environment": {
                            "type": "string"
                        },
                        "scope": {
                            "type": "string"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "project": {
                    "type": "object",
                    "properties": {
                        "description": {
                            "type": "string"
                        },
                        "display_name": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "hooked": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        },
                        "requester": {
                            "type": "string"
                        },
                        "type": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "projecttemplate": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "networkpolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                },
                "rbac": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "redhat": {
            "type": "object",
            "properties": {
                "operators": {
                    "type": "boolean"
                }
            }
        },
        "tracing": {
            "type": "object",
            "properties": {
                "operators": {
                    "type": "boolean"
                }
            }
        },
        "registryroute": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "namespace": {
                    "type": "string"
                }
            }
        }
    }
}